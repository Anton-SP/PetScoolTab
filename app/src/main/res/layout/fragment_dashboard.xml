<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_exam_time_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/exam_corner"
        app:cardElevation="@dimen/exam_elevation"
        app:cardUseCompatPadding="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient"
            android:paddingBottom="12dp">


            <TextView
                android:id="@+id/tv_exam_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/margin_label_big"
                android:gravity="center"
                android:text="@string/exam_welcome"
                android:textColor="@color/white"
                android:textSize="@dimen/text_label_main"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_days_first"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_marginStart="@dimen/margin_top_half"
                android:layout_marginTop="@dimen/margin_top_half"
                android:backgroundTint="@color/exam_value_background"
                app:cardCornerRadius="@dimen/exam_value_radius"
                app:cardElevation="@dimen/exam_value_elevation"
                app:cardUseCompatPadding="true"
                app:layout_constraintEnd_toStartOf="@+id/cv_days_second"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_exam_label">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_days_first"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_common"
                    android:hint="days">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ed_days_first"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:backgroundTint="@color/black" />
                </com.google.android.material.textfield.TextInputLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cv_days_second"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_marginTop="@dimen/margin_top_half"
                android:layout_marginEnd="4dp"
                android:background="@color/background_icon_gray"
                android:backgroundTint="@color/exam_value_background"
                app:cardCornerRadius="@dimen/exam_value_radius"
                app:cardElevation="@dimen/exam_value_elevation"
                app:cardUseCompatPadding="true"
                app:layout_constraintEnd_toStartOf="@+id/tv_border_1"
                app:layout_constraintStart_toEndOf="@id/cv_days_first"
                app:layout_constraintTop_toBottomOf="@id/tv_exam_label">


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_days_second"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_common"
                    android:hint="days">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ed_days_second"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>


            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_border_1"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:text=":"
                android:textColor="@color/white"
                android:textSize="42sp"
                app:layout_constraintEnd_toStartOf="@id/cv_hours_first"
                app:layout_constraintStart_toEndOf="@id/cv_days_second"
                app:layout_constraintTop_toBottomOf="@id/tv_exam_label" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_hours_first"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="@dimen/margin_top_half"
                android:background="@color/background_icon_gray"
                android:backgroundTint="@color/exam_value_background"
                app:cardCornerRadius="@dimen/exam_value_radius"
                app:cardElevation="@dimen/exam_value_elevation"
                app:cardUseCompatPadding="true"
                app:layout_constraintEnd_toStartOf="@+id/cv_hours_second"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/tv_border_1"
                app:layout_constraintTop_toBottomOf="@id/tv_exam_label">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_hours_first"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_common"
                    android:hint="days">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ed_hours_first"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_hours_second"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_marginTop="@dimen/margin_top_half"
                android:layout_marginEnd="4dp"
                android:background="@color/background_icon_gray"
                android:backgroundTint="@color/exam_value_background"
                app:cardCornerRadius="@dimen/exam_value_radius"
                app:cardElevation="@dimen/exam_value_elevation"
                app:cardUseCompatPadding="true"
                app:layout_constraintEnd_toStartOf="@+id/tv_border_2"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/cv_hours_first"
                app:layout_constraintTop_toBottomOf="@id/tv_exam_label">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_hours_second"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_common"
                    android:hint="days">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ed_hours_second"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_border_2"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:text=":"
                android:textColor="@color/white"
                android:textSize="42sp"
                app:layout_constraintEnd_toStartOf="@id/cv_minutes_first"
                app:layout_constraintStart_toEndOf="@id/cv_hours_second"
                app:layout_constraintTop_toBottomOf="@id/tv_exam_label" />


            <androidx.cardview.widget.CardView
                android:id="@+id/cv_minutes_first"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="@dimen/margin_top_half"
                android:background="@color/background_icon_gray"
                android:backgroundTint="@color/exam_value_background"
                app:cardCornerRadius="@dimen/exam_value_radius"
                app:cardElevation="@dimen/exam_value_elevation"
                app:cardUseCompatPadding="true"
                app:layout_constraintEnd_toStartOf="@id/cv_minutes_second"
                app:layout_constraintStart_toEndOf="@+id/tv_border_2"
                app:layout_constraintTop_toBottomOf="@id/tv_exam_label">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_minutes_first"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_common"
                    android:hint="days">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ed_minutes_first"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cv_minutes_second"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_marginTop="@dimen/margin_top_half"
                android:layout_marginEnd="@dimen/margin_top_half"
                android:background="@color/background_icon_gray"
                android:backgroundTint="@color/exam_value_background"
                app:cardCornerRadius="@dimen/exam_value_radius"
                app:cardElevation="@dimen/exam_value_elevation"
                app:cardUseCompatPadding="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cv_minutes_first"
                app:layout_constraintTop_toBottomOf="@id/tv_exam_label">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_minutes_second"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_common"
                    android:hint="days">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/ed_minutes_second"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>


            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_label_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/days_label"
                android:textColor="@color/white"
                android:textSize="@dimen/label_common"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/cv_days_second"
                app:layout_constraintStart_toStartOf="@id/cv_days_first" />

            <TextView
                android:id="@+id/tv_label_hours"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/hours_label"
                android:textColor="@color/white"
                android:textSize="@dimen/label_common"
                app:layout_constraintEnd_toEndOf="@id/cv_hours_second"
                app:layout_constraintStart_toStartOf="@id/cv_hours_first"
                app:layout_constraintTop_toBottomOf="@id/cv_days_first" />

            <TextView
                android:id="@+id/tv_label_minutes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/minutes_label"
                android:textColor="@color/white"
                android:textSize="@dimen/label_common"
                app:layout_constraintEnd_toEndOf="@id/cv_minutes_second"
                app:layout_constraintStart_toStartOf="@id/cv_minutes_first"
                app:layout_constraintTop_toBottomOf="@id/cv_days_first" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_label_classes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_border"
        android:text="CLASSES"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_exam_time_container" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_classes_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/margin_border"
        android:text="6 classes today"
        android:textColor="@color/background_icon_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_exam_time_container" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_classes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_label_classes" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_label_homework"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_border"
        android:text="HOMEWORK"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rv_classes" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_homework"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_label_homework" />


</androidx.constraintlayout.widget.ConstraintLayout>